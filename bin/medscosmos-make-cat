#!/usr/bin/env python

import numpy as np
import medscosmos
import argparse
import fitsio
import esutil as eu

parser=argparse.ArgumentParser()
parser.add_argument('cat_path')
parser.add_argument('output_path')
parser.add_argument('plot_path')

parser.add_argument(
    '--maxrad',
    type=float,
    default=0.2,
    help='max match radius in degrees',
)
parser.add_argument(
    '--sigma-fac',
    type=float,
    default=6.0,
    help='box size is sigma_fac*flux_radius*pixscale/FWHM_FAC',
)
parser.add_argument(
    '--show',
    action='store_true',
)

def main():
    args=parser.parse_args()

    maker = medscosmos.catmaker.CatMaker(
        args.cat_path,
        args.sigma_fac,
        args.maxrad,
    )
    cat = maker.get_cat()
    plt = maker.get_plot()
    
    print('writing:',args.output_path)
    fitsio.write(args.output_path, cat, clobber=True)

    print('writing plot:',args.plot_path)
    plt.write(args.plot_path, dpi=300)

    if args.show:
        plt.show()

if __name__=='__main__':
    main()
 
